@model PassionProject_N01540458.Models.FoodCategoryDto
@{
    ViewBag.Title = "DeleteConfirm";
}

<div class="detailsContainer">
    <h2>Are you sure you want to delete @Model.CategoryName?</h2>
    <div class="buttonsBox">
        <a href="/FoodCategory/List" class="btn btn-success">&raquo; Cancel</a>
        <form action="/FoodCategory/Delete/@Model.CategoryId" method="POST">
            <input type="submit" class="btn btn-danger" value="Confirm Delete" />
        </form>
    </div>
</div>
