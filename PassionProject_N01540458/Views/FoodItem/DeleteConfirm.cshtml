@model PassionProject_N01540458.Models.FoodItemDto
@{
    ViewBag.Title = "DeleteConfirm";
}

<div class="detailsContainer">
    <h2>Are you sure you want to delete @Model.FoodItemName?</h2>
    <div class="buttonsBox">
        <a href="/FoodItem/List" class="btn btn-success">&raquo; Cancel</a>
        <form action="/FoodItem/Delete/@Model.FoodItemId" method="POST">
            <input type="submit" class="btn btn-danger" value="Confirm Delete" />
        </form>
    </div>
</div>